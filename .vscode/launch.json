{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jasmine Tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test-debug"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceRoot}/spec/dist/**.js"
            ]
        }
    ]
}